:root {
    --primaryColor: #0D0A0B; /*Background*/
    --secondaryColor: #454955; /*Sections*/
    --thirdColor: #F3EFF5; /*Text or background*/
    --fourthColor: #D5A021; /*Accents*/
    --neutralColor: #FFFFFF; /*Blanc neutre*/

    --primaryFont: "Playfair"; /*Titres*/
    --secondaryFont: "Raleway"; /*Textes autres*/
}

* {
    margin: 0;
    padding: 0;
    text-decoration: none;
}

body {
    background-color: var(--primaryColor);
    color: var(--neutralColor);
    font-family: var(--primaryFont), serif;
}
 
main p, ul, li {
    font-family: "Raleway", sans-serif;
    line-height: 1.6;
    font-weight: 300;
    font-size: 1em;
}

a {
    font-family: var(--secondaryColor), serif;
    color: var(--primaryColor);
    text-decoration: none;
}

nav a {
    font-family: var(--primaryFont), serif;
    color: var(--primaryColor);
    text-decoration: none;
}

nav a:hover {
    color: var(--fourthColor);
    opacity: 0.7;
    transform: scale(1.1);
    transition: transform 0.3s;
}

h1, h2 {
    color: black;
}

h1 {
    font-size: 4.3em;
    font-weight: 700;
}

h2 {
    font-size: 1.5em;
}

h2, h3 {
    text-transform: uppercase;
}

.RS {
    width: 1em;
    height: 1em;
}

.RS:hover {
    transform: scale(1.2);
    transition: transform 0.3s;
    opacity: 0.9;
}

#photos, #vidéos {
    background: linear-gradient(to left, #000000, #434343);
    text-align: center;
    font-size: 2em;
    font-weight: 300;
}

#photo-profil {
    width: 7em;
    height: 7em;
    border-radius: 50%;
    border: 2px solid var(--fourthColor);
    box-shadow: var(--primaryColor) 0px 0px 0px 3px;
    margin: 20px;
}
