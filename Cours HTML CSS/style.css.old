.grid-paysages {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: auto auto auto;
    gap: 15px;
}

.grid-paysages img {
    max-width: 100%;
    height: auto;
    aspect-ratio: 1 / 1;
    border-radius: 5px;
    object-fit: cover;
}

.lien-conteneur-photo {
    position: relative;
}

.photo-hover {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5em;
    color: white;
    background-color: rgba(0, 0, 0, 0.7);
    display: none;
}

.lien-conteneur-photo:hover .photo-hover {
    display: flex;
}

.important {
    font-weight: 500;
    font-size: 1.2em;
}

.presta {
    border-right: 1px solid #FFFFFF;
    border-bottom: 1px solid #FFFFFF;
}

form {
    display: flex;
    flex-direction: column;
    margin: auto;
    width: 50%;
}

input, textarea {
    padding: 10px;
    border: 1px solid black;
    border-radius: 5px;
}

input:focus, textarea:focus {
    outline: none;
    border: 3px solid var(--fourthColor);
    background-color: var(--neutralColor);
    color: #FFFFFF;
}

input[type="submit"] {
    background-color: var(--thirdColor);
    color: var(--primaryColor);
    font-weight: bold;
    cursor: pointer;
    margin-top: 10px;
}

input[type="submit"]:hover {
    background-color: var(--fourthColor);
    color: var(--neutralColor);
    transition: background-color 0.3s;
}

fieldset {
    border: 1px solid var(--fourthColor);
    color: #D5A021;
    border-radius: 5px;
    margin-bottom: 15px;
    padding: 10px;
    background-color: var(--secondaryColor);

}

footer {
    text-align: center;
    display: flex;
    box-sizing: border-box;
    margin: 2em 0;
    width: 70%;
    margin-left: auto;
    margin-right: auto;
    background-color:#434343;
    padding: 0 50px;
    font-family: var(--secondaryFont);
}

footer a {
    margin: auto;
}
