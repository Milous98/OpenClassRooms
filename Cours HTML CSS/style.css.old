td {
    border: 1px solid #FFFFFF;
    padding: 10px;
    text-align: center;
}

table {
    width: 80%;
    border-collapse: collapse;
    margin-top: 20px;
    margin: auto;
}

th {
    background-color: #434343;
    padding: 10px;
    text-transform: uppercase;
    text-align: center;
    border: 1px solid #FFFFFF;
}

caption {
    margin-top: 10px;
    font-weight: bold;
    font-size: 1.2em;
    text-transform: uppercase;
    caption-side: bottom;
}
