.bannière {
    /*background-image: url(images/immo-style/A7_05463.jpg);
    background-size: cover;*/
    background-color: var(--thirdColor);
    width: 100%;
    height: 300px;
    display: flex;
    flex-direction: column;
}

.bannière div {
    text-align: center;
    width: 100%;
    position: relative;
    top: 55px;
}

.texte-banniere {
    text-transform: uppercase;
}

.RS-icones {
    padding-top: 30px;
}

.logo-pfp {
    width: 100px;
    height: 100px;
    margin : 10px;
}

.logo-pfp:hover {
    transform: scale(1.1);
    transition: transform 0.3s;
}

header {
    display: flex;
    padding-bottom: 100px;
    background-color: var(--primaryColor);
}

main {
    margin: auto;
    width: 70%;
    text-align: justify;
}

section {
    padding: 0 80px 80px 80px;
    background-color: var(--primaryColor);
}

nav {
    position: absolute;
}

nav ul {
    list-style-type: none;
}

.navbar {
    position: fixed;
    background-color: var(--thirdColor);
    opacity: 0.9;
    backdrop-filter: blur(5px);
    box-shadow: var(--primaryColor) 0px 0px 3px 0px;
    padding: 10px;
    display: flex;
    z-index: 1;
    justify-content: space-evenly;
    width: 100%;
    box-sizing: border-box;
    align-items: center;
    font-size: 1.5em;
    text-transform: uppercase;
}

.navbar a {
    color: var(--primaryColor);
}

.navbar .nav-links ul {
    display: flex;
}

.navbar .nav-links ul li {
    margin: 0 20px;
}

.navbar .nav-links ul li.active a {
    color: var(--fourthColor);
    opacity: 100%;
    font-weight: 700;
}

.navbar .menu-hamburger {
    display: none;
    width: 35px;
    position: absolute;
    top: 30px;
    left: 50px;
}
