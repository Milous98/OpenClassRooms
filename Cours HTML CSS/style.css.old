@media screen and (max-width: 900px) {
    main {
        width: 100%;
    }

    .bannière {
        height: 220px;
    }

    .bannière div {
        position: relative;
        top: 20px;
    }

    .navbar {
        padding: 0;
    }

    .nav-bar .logo-pfp {
        position: absolute;
        top: 50px;
        left: 50px;
    }

    .nav-links {
        position: absolute;
        top: 0;
        left: 0;
        background-color: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(50px);
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: -100%;
        transition: all .5s ease;
    }

    .nav-links.mobile-menu {
        margin-left: 0;
    }

    .nav-links ul {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .navbar .nav-links ul li {
        margin: 25px 0;
        font-size: 1.2em;
    }

    .navbar .menu-hamburger {
        position: absolute;
        display: block;
    }

    .navbar .menu-hamburger:active {
        transform: scale(1.2);
        transition: transform 0.5s;
    }

    footer {
        width: auto;
    }
}